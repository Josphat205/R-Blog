
  <section class="w-75 mx-auto mt-5">
  <h3 class="text-center">Posts:<%= @user.posts.count %> </h3>
        <div class="card">
        <% @user.posts.each do |post| %>
          <div class="card-body">
          <div class="mb-3">
          <div class="d-flex justify-content-between">
          <h4><%= post.title%></h4>
          <small>comments:<%= post.comments.count%> likes<%= post.likes.count%></small><br>
          </div>
           <%= link_to 'Read more', user_post_path(@user,post.id), class: 'btn-sm btn btn-primary' %>
          <%= link_to 'Back', user_path(@user), class: 'btn-sm btn btn-default' %>
          </div>
            <div class="well">
            <h6>Comments:<%= post.comments.count %> </h6>
            <% post.comments.each do |comment| %>
            <p>User:<%= comment.author_id%> <%= comment.text%></p>
          <% end %>
            </div>
          </div>
          <% end %>
  </section>
